    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/template/src/index.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/template",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_IGNORE": "false"
            }
        }
    ]
}